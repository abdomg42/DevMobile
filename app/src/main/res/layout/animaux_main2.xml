<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Animaux">

    <ImageView
        android:id="@+id/imageloup"
        android:layout_width="254dp"
        android:layout_height="167dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="84dp"
        android:src="@drawable/loup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imagepanda"
        android:layout_width="230dp"
        android:layout_height="174dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/panda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageloup" />

    <ImageView
        android:id="@+id/imagetiger"
        android:layout_width="241dp"
        android:layout_height="215dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/tiger"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagepanda" />
</androidx.constraintlayout.widget.ConstraintLayout>